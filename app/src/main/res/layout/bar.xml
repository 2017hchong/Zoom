    <ImageButton android:layout_height="60dp" android:layout_width="60dp" android:layout_centerVertical="true" android:id="@id/searchButton" android:visibility="gone" android:adjustViewBounds="true" android:src="@android:drawable/ic_menu_search" android:scaleType="fitCenter" android:padding="2dp" android:layout_alignParentRight="true"/>

</RelativeLayout>